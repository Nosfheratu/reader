.row-fluid
  .span12
    - if current_user.is_admin?
      = paginate @users
      .left
        %table.table.table-striped  
          %thead
            %tr
              %th Name
              %th Email
              %th Total Sign Ins
              %th Last Sign In
              %th Feeds
              %th Articles
              %th History
              %th Starred
              %th To Read
          %tbody
            %tr
              %td= User.count
              %td -
              %td -
              %td -
              %td= @total_subscriptions
              %td= @total_articles
              %td= @total_history
              %td= @total_star
              %td= @total_to_read
            - @users.each do |u|
              %tr
                %td= u.name
                %td= u.email
                %td= u.sign_in_count
                %td= smart_date(u.last_sign_in_at)
